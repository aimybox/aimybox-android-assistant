<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultAssistantTheme" parent="Theme.MaterialComponents.Light">
        <item name="aimybox_assistantFontTheme">@style/Font.Assistant</item>
        <item name="aimybox_userFontTheme">@style/Font.User</item>
    </style>

    <style name="DefaultAssistantTheme.Button">
        <item name="aimybox_backgroundColor">@color/primary</item>
        <item name="aimybox_recordingAnimationColor">@color/recording</item>
        <item name="aimybox_buttonExpandedColor">@color/white</item>
        <item name="aimybox_buttonCollapsedColor">@color/primary</item>
        <item name="aimybox_buttonExpandedIconTint">@color/black</item>
        <item name="aimybox_buttonCollapsedIconTint">@color/white</item>
        <item name="aimybox_buttonSize">56dp</item>
        <item name="aimybox_buttonMarginEnd">36dp</item>
        <item name="aimybox_buttonMarginBottom">36dp</item>
        <item name="aimybox_buttonElevation">6dp</item>
        <item name="aimybox_buttonGravity">end|bottom</item>
        <item name="aimybox_startRecordingDrawable">@drawable/icon_mic</item>
        <item name="aimybox_stopRecordingDrawable">@drawable/icon_stop</item>
    </style>

    <style name="Font">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Font.User">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
    </style>

    <style name="Font.Assistant">
        <item name="android:fontFamily">@font/source_sans_pro_light</item>
    </style>

</resources>
